!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ComicsQuotes
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body

    .header
      .header__menu
        .header__menu__title
          = link_to  "Comics Quotes", root_path  
        %ul.header__menu__user
          %li.header__menu__user__select マイページ
          %li.header__menu__user__select ログアウト
          %li.header__menu__user__select
            = link_to  "投稿する", new_quote_path
          %li.header__menu__user__select
            = link_to  "ログイン", user_session_path
          %li.header__menu__user__select
            = link_to  "新規登録", new_user_registration_path

    = yield
